# 表示设置默认值
defaults
	# 关闭tls
	tls off
	tls_certcheck off

	# 指定日志文件
	logfile ~/.mail/msmtp.log


# 设置账号
account Yilong-skydata

	# SMTP邮件服务器地址
	host smtp.sky-data.cn

	# 发送的邮件Email
	from yilong.ren@sky-data.cn

	# 端口号
	port 25

	# 指定认证方式
	auth login

	# 指定用户名
	user yilong.ren@sky-data.cn

	# 指定密码
	password xxx

